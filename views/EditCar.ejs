<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Edit Car</title>
</head>

<body>
    <h3>Editer cette donnée</h3>
    <div class="container">
        <% car.forEach(car=> {%>
            <form action="/car/edit/<%= car._id%>?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="make" value="<%= car.make %>">
                    <label for="floatingInput">Marque du véhicule</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="model" value="<%= car.model %>">
                    <label for="floatingInput">Modèle du véhicule</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="year" value="<%= car.year %>">
                    <label for="floatingInput">Année du véhicule</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" name="color" value="<%= car.color %>">
                    <label for="floatingInput">Couleur du véhicule</label>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" class="btn btn-warning" value="Editer un véhicule">
                </div>
            </form>
            <br>
            <h5>Supprimer cette donnée</h5>
            <form action="/car/delete/<%= car._id%>?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">

                <div class="d-grid gap-2">
                    <input type="submit" class="btn btn-danger" value="Supprimer">
                </div>
            </form>
            <br><br><br><br>
    </div>
    <%})%>

</body>

</html>